section.contacts
    .container.contacts__container
        .contacts__title Контакты
        ul.contacts__list
            .contacts__item
                .contacts__pic
                    +icon("phone", "contacts__pic-phone")
                .contacts__block
                    .contacts__block-title Телефон
                    .contacts__info +7 (351) 211-10-10
            .contacts__item
                .contacts__pic
                    +icon("placeholder", "contacts__pic-placeholder ")
                .contacts__block
                    .contacts__block-title Адрес
                    .contacts__info г. Челябинск,</br> Черкасская улица, 19
            .contacts__item
                .contacts__pic
                    +icon("stopwatch", "contacts__pic-stopwatch")
                .contacts__block
                    .contacts__block-title Режим работы
                    .contacts__info с 9:00 до 21:00 </br> ежедневно
